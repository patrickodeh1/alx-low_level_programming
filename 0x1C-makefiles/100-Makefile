CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) $(CFLAGS)

main.o: main.c m.h
	$(CC) -c main.c $(CFLAGS)

school.o: school.c m.h
	$(CC) -c school.c $(CFLAGS)

clean:
	$(RM) $(OBJ) $(NAME)
	$(RM) *~ \#*\# *.swp

oclean:
	$(RM) $(OBJ)

fclean: clean

re: fclean all
