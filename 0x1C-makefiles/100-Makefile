CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

main.o: main.c m.h
	$(CC) -c $<

school.o: school.c m.h
	$(CC) -c $<

clean:
	$(RM) $(OBJ) $(NAME); $(RM) *~ \#*\# *.swp

oclean:
	$(RM) $(OBJ)

fclean: clean

re: fclean all
